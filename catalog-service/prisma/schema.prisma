// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// REMOVIDO: url = env("DATABASE_URL")
// MOTIVO: A configuração está sendo injetada via prisma.config.ts
datasource db {
  provider = "postgresql"
}

// --- CATALOG DOMAIN ---

model Movie {
  id          String    @id @default(uuid())
  title       String
  description String
  durationMin Int
  genre       String
  releaseDate DateTime
  posterUrl   String?
  
  sessions    Session[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("movies")
}

model Room {
  id        String @id @default(uuid())
  name      String
  capacity  Int
  
  seats     Seat[]
  sessions  Session[]

  @@map("rooms")
}

model Seat {
  id        String @id @default(uuid())
  row       String
  number    Int
  
  roomId    String
  room      Room   @relation(fields: [roomId], references: [id])
  
  sessionSeats SessionSeat[]

  @@map("seats")
}

model Session {
  id        String   @id @default(uuid())
  startTime DateTime
  
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id])
  
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])

  seatsStatus SessionSeat[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

// --- READ MODEL (CQRS) ---
model SessionSeat {
  id        String   @id @default(uuid())
  isAvailable  Boolean  @default(false)
  
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  
  seatId    String
  seat      Seat     @relation(fields: [seatId], references: [id])

  updatedAt DateTime @updatedAt

  @@unique([sessionId, seatId])
  @@map("session_seats")
}